// Prisma schema for Troop backend
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  PASSENGER
  DRIVER
}

model User {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  name         String?
  passwordHash String
  createdAt    DateTime  @default(now())
  role         UserRole  @default(PASSENGER)
  bookings     Booking[]
  routes       VanRoute[] @relation("DriverRoutes")
}

model VanRoute {
  id           Int       @id @default(autoincrement())
  origin       String
  destination  String
  departureAt  DateTime
  seatCapacity Int
  createdAt    DateTime  @default(now())
  published    Boolean   @default(false)
  driverId     Int
  driver       User      @relation("DriverRoutes", fields: [driverId], references: [id], onDelete: Cascade)
  bookings     Booking[]

  @@index([departureAt])
  @@index([origin, destination, departureAt])
  @@index([driverId])
}

model Booking {
  id        Int       @id @default(autoincrement())
  userId    Int
  routeId   Int
  status    String    @default("CONFIRMED")
  createdAt DateTime  @default(now())

  user   User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  route  VanRoute @relation(fields: [routeId], references: [id], onDelete: Cascade)

  @@unique([userId, routeId], name: "unique_user_route_booking")
  @@index([routeId])
}
